{
  "title": "Change slash and z key",
  "rules": [
    {
      "description": "Change slash key to option. (Post slash key when pressed alone)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "slash",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "slash"
            }
          ]
        }
      ]
    },
    {
      "description": "Change z key to option. (Post z key when pressed alone)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "z"
            }
          ]
        }
      ]
    }
  ]
}
