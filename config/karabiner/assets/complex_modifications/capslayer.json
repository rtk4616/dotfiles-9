{
  "title": "Caps hold layer, if alone Esc",
  "rules": [
    {
      "description": "Caps Hyper [spacebar, hyper-cmd+comma, u, m]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "control",
                "command",
                "shift"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "caps_hold_mode",
                "value": 1
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "caps_hold_mode",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar"
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "left_shift",
                "left_command",
                "left_control",
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_hold_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "comma"
          },
