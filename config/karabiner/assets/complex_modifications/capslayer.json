{
  "title": "Caps hold layer, if alone Esc",
  "rules": [
    {
      "description": "Caps hold layer [Numpad]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "set_variable": {
                "name": "caps_hold_mode",
                "value": 1
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "caps_hold_mode",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "u"
          },
          "to": [
            {
              "key_code": "keypad_7"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_hold_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "i"
          },
