{
  "title": "Caps hold layer (Numpad and misc)",
  "rules": [
    {
      "description": "Caps hold layer, if alone Esc [Numpad and misc]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "set_variable": {
                "name": "caps_hold_mode",
                "value": 1
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "caps_hold_mode",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "8"
          },
          "to": [
            {
              "key_code": "keypad_equal_sign"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_hold_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "9"
