            }
          ],
          "conditions": [
            {
             "type": "variable_if",
             "name": "numeric_keypad_mode",
             "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar"
          },
          "to": [
            {
              "key_code": "keypad_0"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}
