{
  "title": "Numeric Keypad",
  "rules": [
    {
      "description": "Numeric Keypad Mode [Quote as trigger key]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote"
          },
          "to": [
            {
              "set_variable": {
                "name": "numeric_keypad_mode",
                "value": 1
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "quote"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "numeric_keypad_mode",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "a"
          },
          "to": [
            {
              "key_code": "keypad_7"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "r"
          },
          "to": [
            {
              "key_code": "keypad_8"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "g"
          },
          "to": [
            {
              "key_code": "keypad_9"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "w"
          },
          "to": [
            {
              "key_code": "keypad_4"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "s"
          },
          "to": [
            {
              "key_code": "keypad_5"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "e"
          },
          "to": [
            {
              "key_code": "keypad_6"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f"
          },
          "to": [
            {
              "key_code": "keypad_1"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "q"
          },
          "to": [
            {
