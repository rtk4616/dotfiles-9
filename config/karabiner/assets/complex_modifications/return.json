{
  "title": "Change return key",
  "rules": [
    {
      "description": "Change return to option. (Post return when pressed alone)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "optional": [
                "shift",
                "command",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "Change Quote to option. (Post Quote when pressed alone)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "optional": [
                "shift",
                "command",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "quote"
            }
          ]
        }
      ]
    }
  ]
}
