{
  "title": "Tab hold layer",
  "rules": [
    {
      "description": "Tab hold layer [Arrows, HM WM]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab"
          },
          "to": [
            {
              "set_variable": {
                "name": "tab_hold_mode",
                "value": 1
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "tab"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "tab_hold_mode",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "u"
          },
          "to": [
            {
              "key_code": "home"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "tab_hold_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "i"
