{
  "title": "Change quote key",
  "rules": [
    {
      "description": "Hold quote to left_option, quote if alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "quote"
            }
          ]
        }
      ]
    }
  ]
}
