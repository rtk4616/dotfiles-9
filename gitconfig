[user]
    name = Vladimir Bauer
    email = vbauerster@gmail.com
[color]
    ui = auto
[push]
    default = current
[alias]
    ls = ls-files
    co = checkout
    ci = commit
    st = status
    bv = branch -v
    br = branch -av
    df = diff
    dw = diff -w
    dc = diff --cached
    rv = remote -v
    rau = remote add upstream
    stat = log --pretty=format:\"[%h] %ae, %ar: %s\" --stat
    last = cat-file commit HEAD
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard
    # hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[credential]
    helper = osxkeychain
[core]
    excludesfile = /Users/vbauer/.gitignore
    editor = nvim
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[github]
    user = vbauerster
[difftool "sourcetree"]
    cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$LOCAL\" \"$REMOTE\"
    path =
[diff]
    tool = sourcetree
    compactionHeuristic = true
[mergetool "sourcetree"]
    cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
    trustExitCode = true
[mergetool "nvimdiff"]
    cmd = nvim -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[mergetool "gitmerge"]
    cmd = $HOME/bin/gitmerge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[merge]
    tool = gitmerge
[commit]
    template = /Users/vbauer/.stCommitMsg
[color "diff"]
    old = red dim
    new = green italic
