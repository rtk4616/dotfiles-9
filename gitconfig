[user]
	name = Vladimir Bauer
	email = vbauerster@gmail.com
[color]
	ui = auto
[push]
	default = current
[alias]
	co = checkout
	ci = commit
	st = status
	b = branch -v
	br = branch -av
	d = diff -w
	r = remote -v
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	stat = log --pretty=format:\"[%h] %ae, %ar: %s\" --stat
	last = cat-file commit HEAD
[credential]
	helper = osxkeychain
[core]
	excludesfile = /Users/vbauer/.gitignore
	editor = nvim
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[github]
	user = vbauerster
[difftool "sourcetree"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
[mergetool "nvimdiff"]
	cmd = nvim -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[mergetool "gitmerge"]
	cmd = $HOME/bin/gitmerge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[diff]
	tool = sourcetree
	compactionHeuristic = true
[merge]
	tool = gitmerge
[commit]
	template = /Users/vbauer/.stCommitMsg
[color "diff"]
	old = red dim
	new = green italic
